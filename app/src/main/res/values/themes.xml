<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimeTrekerForAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabLayout" parent="TextAppearance.Design.Tab">
        <item name="tabTextAppearance">@style/TabTextApperancy</item>
        <item name="background">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorColor">#F31616</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">#9d9d9d</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="TabTextApperancy" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>