<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/name"
            android:text="Редактирование задания"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>

    </LinearLayout>


        <LinearLayout
            android:id="@+id/vlozh"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>
            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Вложенность"/>
            <EditText
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/vlozhennost_et"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Пример: 1"/>
        </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scan_box"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/pic_scan"/>
                <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Для перемещения отсканируйте ШК паллета."/>

            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/solid_btn"
                android:layout_marginTop="24dp"
                android:id="@+id/btn_change"
                android:layout_gravity="bottom"
                android:textAllCaps="false"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:textSize="14dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Изменить номер паллета"
                android:layout_height="48dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/red_btn"
                android:id="@+id/btn_done"
                android:layout_gravity="bottom"
                android:textAllCaps="false"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:textSize="14dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Изменить"
                android:layout_height="48dp"/>

</LinearLayout>

