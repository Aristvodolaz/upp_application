<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Добро пожаловать"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="45dp"/>
    <TextView
        android:textColor="#A39595"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:fontFamily="@font/roboto_regular"
        android:text="для дальнейшей работы в приложении вам
следует авторизироваться.
Отсканируйте ваш штрих код и продолжите работу в системе."
        android:layout_gravity="center"
        android:gravity="center"
        />

    <ImageView
        android:layout_marginTop="45dp"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/pic_scan"/>



    <TextView
        android:id="@+id/name"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Имя фамилия Отчество"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="45dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:visibility="gone"
        android:background="@drawable/red_btn"
        android:layout_marginTop="40dp"
        android:id="@+id/btn"
        android:layout_gravity="bottom"
        android:textAllCaps="false"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:textSize="14dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Продолжить"
        android:layout_height="48dp"/>
